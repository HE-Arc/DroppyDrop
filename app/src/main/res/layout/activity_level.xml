<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".game.Level.LevelActivity">

    <TextView
        android:id="@+id/txtSelectLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/mona_free"
        android:textAlignment="center"
        android:textSize="40sp"
        android:layout_margin="5sp"
        android:visibility="visible"
        android:text="@string/select_a_level" />

    <TableLayout
        android:id="@+id/levelTableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="5sp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" />

    <ImageView
        android:id="@+id/levelImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="@android:dimen/thumbnail_height"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        android:contentDescription="@string/level_image"
        android:scaleType="centerInside"
        app:srcCompat="@android:color/holo_green_dark" />

    <TextView
        android:id="@+id/levelInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/mona_free"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textAppearance="@android:style/TextAppearance.Material.Headline"
        android:textSize="30sp"
        android:textAlignment="center"
        android:text="" />

    <Button
        android:id="@+id/playLevelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTheme.button.home"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:visibility="invisible"
        android:text="@string/play" />

</LinearLayout>